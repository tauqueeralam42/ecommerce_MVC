@model Category


<form method="post">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row">
		<div class="col-6">
			<h2 class="text-primary mt-2">Edit Category</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Index" class="btn btn-primary mb-3">
				<i class="bi bi-arrow-left-circle-fill"></i> Back to List
			</a>
		</div>
		<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name">Category Name</label>
			<input asp-for="Name"class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" >Display Order</label>
			<input asp-for="DisplayOrder" class="form-control"/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<div class="row">
		<button type="submit" class="btn btn-primary form-control" style="width:200px">Update</button>
		</div>
	</div>
</form>

@section Scripts {
	@{
				<partial name="_ValidationScriptsPartial" />
	}
}